<section class="page__main main">
  <div class="main__container">
    <div class="main__content">
      <h1 class="main__title">{{ section.settings.heading }}</h1>
      <p class="main__text">{{ section.settings.description }}</p>
      <div class="main__actions actions-main">
        <a href="{{ section.settings.button_link }}" class="actions-main__button">{{ section.settings.button_label }}</a>
      </div>
    </div>
    <div class="main__decor">
      <div class="main__image">
        {%- if section.settings.image != blank -%}
          <img src="{{ section.settings.image | image_url: width: 1920 }}" alt="{{ section.settings.image.alt | escape }}">
        {%- else -%}
          <img src="img/main/main-decor.jpg" alt="Main Decor">
        {%- endif -%}
      </div>
    </div>
  </div>
</section>

{% schema %}
{
  "name": "Main Banner",
  "tag": "section",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Discover the Best Hot Wheels Collectibles"
    },
    {
      "type": "textarea",
      "id": "description",
      "label": "Description",
      "default": "Explore 50,000+ exclusive Hot Wheels models, from classic legends to rare limited editions."
    },
    {
      "type": "image_picker",
      "id": "image",
      "label": "Banner Image"
    },
    {
      "type": "text",
      "id": "button_label",
      "label": "Button Label",
      "default": "Go Shop"
    },
    {
      "type": "url",
      "id": "button_link",
      "label": "Button Link"
    }
  ],
  "presets": [
    {
      "name": "Main Banner"
    }
  ]
}
{% endschema %}
