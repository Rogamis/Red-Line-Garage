<section class="page__store store">
  <div class="store__container">
    <h2 class="store__title title">
      {{ section.settings.heading }}
    </h2>
    <div class="store__body body-store">
      <div class="body-store__header">
        <div class="body-store__title">{{ section.settings.subheading }}</div>
        <a href="{{ section.settings.view_all_link }}" class="body-store__all">{{ section.settings.view_all_label }}</a>
      </div>
      <div class="body-store__items">
        {%- for product in section.settings.collection.products limit: section.settings.products_to_show -%}
          <div class="body-store__item item">
            <a href="{{ product.url }}" class="item__image">
              <img src="{{ product.featured_image | image_url: width: 400 }}" alt="{{ product.title | escape }}">
            </a>
            <a href="{{ product.url }}" class="item__title">{{ product.title }}</a>
            <div class="item__price">{{ product.price | money }}</div>
          </div>
        {%- endfor -%}
      </div>
    </div>
  </div>
</section>

{% schema %}
{
  "name": "Store Section",
  "tag": "section",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Section Heading",
      "default": "Check out the <span>Store</span>"
    },
    {
      "type": "text",
      "id": "subheading",
      "label": "Subheading",
      "default": "NEW ON THE BOARD"
    },
    {
      "type": "collection",
      "id": "collection",
      "label": "Select Collection"
    },
    {
      "type": "range",
      "id": "products_to_show",
      "label": "Number of Products",
      "min": 1,
      "max": 12,
      "step": 1,
      "default": 6
    },
    {
      "type": "text",
      "id": "view_all_label",
      "label": "View All Label",
      "default": "View all"
    },
    {
      "type": "url",
      "id": "view_all_link",
      "label": "View All Link"
    }
  ],
  "presets": [
    {
      "name": "Store Section",
      "settings": {
        "collection": "all",
        "products_to_show": 6,
        "view_all_label": "View all",
        "view_all_link": "#"
      }
    }
  ]
}
{% endschema %}